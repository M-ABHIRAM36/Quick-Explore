<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quick Explore - Your Next Adventure</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Montserrat:wght@700;800;900&display=swap" rel="stylesheet">
  <!-- Animate.css -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <style>
    :root {
      --primary-color: #4e54c8;
      --secondary-color: #8f94fb;
      --accent-color: #FF6B6B;
      --success-color: #20bf6b;
      --text-color: #ffffff;
      --dark-blue: #2d3a61;
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Poppins', sans-serif;
      overflow: hidden;
      background-color: #08090A;
      height: 100vh;
      width: 100vw;
    }
    
    /* Main splash container */
    .splash-screen {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      display: flex;
      justify-content: center;
      align-items: center;
      opacity: 1;
      z-index: 9999;
      animation: fadeOut 5s forwards;
      overflow: hidden;
    }
    
    /* Background particles animation */
    .bubbles {
      position: absolute;
      width: 100%;
      height: 100%;
      overflow: hidden;
      z-index: 0;
    }
    
    .bubble {
      position: absolute;
      bottom: -150px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      opacity: 0.5;
      animation: float 8s infinite ease-in;
    }
    
    @keyframes float {
      0% {
        transform: translateY(0) rotate(0);
        opacity: 0.5;
        border-radius: 0;
      }
      50% {
        transform: translateY(-1000px) rotate(180deg);
        opacity: 0.2;
        border-radius: 50%;
      }
      100% {
        transform: translateY(-2000px) rotate(360deg);
        opacity: 0;
        border-radius: 50%;
      }
    }
    
    /* Content styling */
    .splash-content {
      text-align: center;
      color: var(--text-color);
      position: relative;
      z-index: 2;
      background: rgba(0, 0, 0, 0.15);
      padding: 3rem;
      border-radius: 20px;
      backdrop-filter: blur(5px);
      box-shadow: 0 25px 45px rgba(0, 0, 0, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.1);
      width: 80%;
      max-width: 600px;
    }
    
    .logo-container {
      position: relative;
      width: 120px;
      height: 120px;
      margin: 0 auto 1.5rem;
    }
    
    .logo-circle {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0.1);
      display: flex;
      justify-content: center;
      align-items: center;
      animation: pulse 2s infinite;
    }
    
    .logo-circle:nth-child(1) {
      animation-delay: 0s;
    }
    
    .logo-circle:nth-child(2) {
      animation-delay: 0.4s;
    }
    
    .logo-circle:nth-child(3) {
      animation-delay: 0.8s;
    }
    
    .logo-icon {
      font-size: 3.5rem;
      color: var(--text-color);
      z-index: 2;
      animation: bounce 2s infinite;
    }
    
    .splash-content h1 {
      font-family: 'Montserrat', sans-serif;
      font-size: 2.8rem;
      font-weight: 800;
      margin-bottom: 1rem;
      background: linear-gradient(to right, #ffffff, #e0e0e0);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: 0 10px 20px rgba(0,0,0,0.15);
      letter-spacing: 1px;
      animation: slideInDown 1s ease-in-out;
    }
    
    .splash-content p {
      font-size: 1.3rem;
      font-weight: 300;
      margin-bottom: 2rem;
      opacity: 0.9;
      animation: slideInUp 1s ease-in-out 0.5s;
      animation-fill-mode: both;
    }
    
    .explore-destinations {
      display: flex;
      justify-content: center;
      margin-bottom: 2rem;
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .destination-icon {
      width: 60px;
      height: 60px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: all 0.3s ease;
      animation: fadeIn 0.5s backwards;
    }
    
    .destination-icon:nth-child(1) { animation-delay: 1s; }
    .destination-icon:nth-child(2) { animation-delay: 1.2s; }
    .destination-icon:nth-child(3) { animation-delay: 1.4s; }
    .destination-icon:nth-child(4) { animation-delay: 1.6s; }
    
    .destination-icon i {
      font-size: 1.5rem;
      color: white;
    }
    
    .progress-container {
      width: 100%;
      height: 6px;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 10px;
      overflow: hidden;
      margin-top: 2rem;
    }
    
    .progress-bar {
      height: 100%;
      width: 0;
      background: linear-gradient(to right, var(--accent-color), var(--success-color));
      border-radius: 10px;
      animation: progress 3s forwards ease-in-out;
    }
    
    .loading-text {
      font-size: 0.9rem;
      margin-top: 0.5rem;
      opacity: 0.7;
    }
    
    /* Animations */
    @keyframes pulse {
      0% {
        transform: scale(0.9);
        opacity: 0.7;
      }
      50% {
        transform: scale(1.1);
        opacity: 0.3;
      }
      100% {
        transform: scale(0.9);
        opacity: 0.7;
      }
    }
    
    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
      }
      40% {
        transform: translateY(-20px);
      }
      60% {
        transform: translateY(-10px);
      }
    }
    
    @keyframes progress {
      0% { width: 0%; }
      100% { width: 100%; }
    }
    
    @keyframes fadeOut {
      0% {
        opacity: 1;
      }
      85% {
        opacity: 1;
      }
      100% {
        opacity: 0;
        visibility: hidden;
      }
    }
    
    @keyframes slideInDown {
      from {
        transform: translateY(-50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    
    @keyframes slideInUp {
      from {
        transform: translateY(50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: scale(0.5);
      }
      to {
        opacity: 1;
        transform: scale(1);
      }
    }
  </style>
</head>
<body>
  <div id="splashScreen" class="splash-screen">
    <!-- Animated bubbles background -->
    <div class="bubbles" id="bubbles"></div>
    
    <div class="splash-content animate__animated animate__zoomIn">
      <!-- Logo with pulsing circles -->
      <div class="logo-container">
        <div class="logo-circle"></div>
        <div class="logo-circle"></div>
        <div class="logo-circle"></div>
        <!-- <i class="fas fa-compass logo-icon"></i> -->
        <i class="fas fa-map-marked-alt logo-icon"></i>
      </div>
      
      <h1>Welcome To <br>QUICK EXPLORE</h1>
      <p>Your journey to extraordinary destinations begins here</p>
      
      <!-- Destination icons -->
      <div class="explore-destinations">
        <div class="destination-icon">
          <i class="fas fa-mountain"></i>
        </div>
        <div class="destination-icon">
          <i class="fas fa-umbrella-beach"></i>
        </div>
        <div class="destination-icon">
          <i class="fas fa-city"></i>
        </div>
        <div class="destination-icon">
          <i class="fas fa-car"></i>
        </div>
      </div>
      
      <!-- Progress bar -->
      <div class="progress-container">
        <div class="progress-bar"></div>
      </div>
      <div class="loading-text">
        <span id="loadingText">Preparing your adventure...</span>
      </div>
    </div>
  </div>

  <script>
    // Create animated bubbles
    document.addEventListener('DOMContentLoaded', function() {
      const bubblesContainer = document.getElementById('bubbles');
      const count = 15;
      
      // Create bubbles
      for (let i = 0; i < count; i++) {
        const bubble = document.createElement('div');
        bubble.className = 'bubble';
        
        // Random size between 30px and 120px
        const size = Math.random() * 90 + 30;
        bubble.style.width = `${size}px`;
        bubble.style.height = `${size}px`;
        
        // Random position
        bubble.style.left = `${Math.random() * 100}%`;
        
        // Random animation duration between 5s and 15s
        const duration = Math.random() * 10 + 5;
        bubble.style.animationDuration = `${duration}s`;
        
        // Random delay
        const delay = Math.random() * 5;
        bubble.style.animationDelay = `${delay}s`;
        
        bubblesContainer.appendChild(bubble);
      }
      
      // Loading text variations
      const loadingTexts = [
        "Preparing your adventure...",
        "Finding the best destinations...",
        "Packing your virtual suitcase...",
        "Mapping your journey...",
        "Almost there..."
      ];
      
      let textIndex = 0;
      const loadingTextElement = document.getElementById('loadingText');
      
      // Change loading text every 1s
      const textInterval = setInterval(() => {
        textIndex = (textIndex + 1) % loadingTexts.length;
        loadingTextElement.textContent = loadingTexts[textIndex];
      }, 1000);
      
      // Clear interval when redirecting
      setTimeout(() => {
        clearInterval(textInterval);
      }, 4800);
    });
    
    // Redirect after splash screen animation
    window.addEventListener('load', () => {
      setTimeout(() => {
        document.getElementById('splashScreen').style.display = 'none';
        window.location.href = '/places2';
      }, 5000);
    });
  </script>
</body>
</html>
