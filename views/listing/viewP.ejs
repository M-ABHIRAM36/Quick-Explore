                <h3 class="detail-title">
                    <i class="fas fa-tag"></i>
                    Type
                </h3>
                <div class="detail-content">
                    <%= place[0].type %>
                </div>
            </div>

            <div class="detail-card" data-aos="fade-up" data-aos-delay="400">
                <h3 class="detail-title">
                    <i class="fas fa-calendar-alt"></i>
                    Best Time to Visit
