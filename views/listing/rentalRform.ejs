    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Form validation
            const rentalForm = document.getElementById('rentalForm');
            const ownerNameInput = document.getElementById('ownerName');
            const contactInput = document.getElementById('contact');
            const emailInput = document.getElementById('email');
            const pincodeInput = document.getElementById('pincode');
            const priceInput = document.getElementById('price');
            const distFromPlaceInput = document.getElementById('distFromPlace');
            const locationInput = document.getElementById('location');
            const imagesInput = document.getElementById('images');
            const submitBtn = document.getElementById('submitBtn');
            
            // Error elements
            const ownerNameError = document.getElementById('ownerNameError');
            const contactError = document.getElementById('contactError');
            const emailError = document.getElementById('emailError');
            const pincodeError = document.getElementById('pincodeError');
            
            // Create new error elements
            const priceError = document.createElement('small');
            priceError.className = 'form-text text-danger';
            priceInput.parentNode.appendChild(priceError);
            
            const distanceError = document.createElement('small');
            distanceError.className = 'form-text text-danger';
            distFromPlaceInput.parentNode.appendChild(distanceError);
            
            const locationError = document.createElement('small');
            locationError.className = 'form-text text-danger';
            locationInput.parentNode.appendChild(locationError);
            
            const imagesError = document.createElement('small');
            imagesError.className = 'form-text text-danger';
            imagesInput.parentNode.appendChild(imagesError);
            
            // Validation flags
            let isNameValid = false;
            let isContactValid = false;
            let isEmailValid = true; // Email is optional
            let isPincodeValid = false;
            let isPriceValid = false;
            let isDistanceValid = false;
            let isLocationValid = false;
            let isImagesValid = false;
            
            // Name validation - 5-15 characters, only letters
            ownerNameInput.addEventListener('input', validateName);
            
            function validateName() {
                const name = ownerNameInput.value.trim();
                const nameRegex = /^[a-zA-Z ]{3,15}$/;
                
                if (!name) {
                    ownerNameError.textContent = 'Name is required';
                    isNameValid = false;
                } else if (!nameRegex.test(name)) {
                    ownerNameError.textContent = 'Name must be 5-15 characters and contain only letters';
                    isNameValid = false;
                } else {
                    ownerNameError.textContent = '';
                    isNameValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Contact validation - Indian phone numbers
            contactInput.addEventListener('input', validateContact);
            
            function validateContact() {
                const contact = contactInput.value.trim();
                const indianPhoneRegex = /^[6-9]\d{9}$/;
                
                if (!contact) {
                    contactError.textContent = 'Contact number is required';
                    isContactValid = false;
                } else if (!indianPhoneRegex.test(contact)) {
                    contactError.textContent = 'Please enter a valid Indian phone number (10 digits starting with 6-9)';
                    isContactValid = false;
                } else {
                    contactError.textContent = '';
                    isContactValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Email validation - only allow gmail accounts, but optional
            emailInput.addEventListener('input', validateEmail);
            
            function validateEmail() {
                const email = emailInput.value.trim();
                
                if (email) {
                    const gmailRegex = /^[\w.+-]+@gmail\.com$/;
                    
                    if (!gmailRegex.test(email)) {
                        emailError.textContent = 'Only Gmail accounts are allowed';
                        isEmailValid = false;
                    } else {
                        emailError.textContent = '';
                        isEmailValid = true;
                    }
                } else {
                    // Email is optional
                    emailError.textContent = '';
                    isEmailValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Price validation - between 1000 and 250000
            priceInput.addEventListener('input', validatePrice);
            
            function validatePrice() {
                const price = priceInput.value.trim();
                const minPrice = 1000;
                const maxPrice = 250000;
                
                if (!price) {
                    priceError.textContent = 'Price is required';
                    isPriceValid = false;
                } else if (price < minPrice) {
                    priceError.textContent = `Price must be at least ₹${minPrice}`;
                    isPriceValid = false;
                } else if (price > maxPrice) {
                    priceError.textContent = `Price cannot exceed ₹${maxPrice}`;
                    isPriceValid = false;
                } else {
                    priceError.textContent = '';
                    isPriceValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Distance validation - between 0 and 20 km
            distFromPlaceInput.addEventListener('input', validateDistance);
            
            function validateDistance() {
                const distance = distFromPlaceInput.value.trim();
                const maxDistance = 20;
                
                if (!distance) {
                    distanceError.textContent = 'Distance is required';
                    isDistanceValid = false;
                } else if (distance < 0) {
                    distanceError.textContent = 'Distance cannot be negative';
                    isDistanceValid = false;
                } else if (distance > maxDistance) {
                    distanceError.textContent = `Distance cannot exceed ${maxDistance} km`;
                    isDistanceValid = false;
                } else {
                    distanceError.textContent = '';
                    isDistanceValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Location validation - at least 2 words, each word minimum 3 letters
            locationInput.addEventListener('input', validateLocation);
            
            function validateLocation() {
                const location = locationInput.value.trim();
                const words = location.split(/\s+/).filter(word => word.length > 0);
                
                if (!location) {
                    locationError.textContent = 'Address is required';
                    isLocationValid = false;
                } else if (words.length < 2) {
                    locationError.textContent = 'Address must contain at least 2 words';
                    isLocationValid = false;
                } else if (words.some(word => word.length < 3)) {
                    locationError.textContent = 'Each word in address must be at least 3 letters long';
                    isLocationValid = false;
                } else {
                    locationError.textContent = '';
                    isLocationValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Image validation - only jpg, jpeg, png allowed
            imagesInput.addEventListener('change', validateImages);
            
            function validateImages() {
                const file = imagesInput.files[0];
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                
                if (!file) {
                    imagesError.textContent = 'Image is required';
                    isImagesValid = false;
                } else if (!allowedTypes.includes(file.type)) {
                    imagesError.textContent = 'Only JPG, JPEG, and PNG images are allowed';
                    isImagesValid = false;
                } else {
                    imagesError.textContent = '';
                    isImagesValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Pincode validation - Telangana pincodes (500xxx to 509xxx)
            pincodeInput.addEventListener('input', validatePincode);
            
            function validatePincode() {
                const pincode = pincodeInput.value.trim();
                const telanganaPincodeRegex = /^5[0-9]{5}$/;
                
                if (!pincode) {
                    pincodeError.textContent = 'Pincode is required';
                    isPincodeValid = false;
                } else if (!telanganaPincodeRegex.test(pincode)) {
                    pincodeError.textContent = 'Please enter a valid Telangana pincode (500xxx to 509xxx)';
                    isPincodeValid = false;
                } else {
                    pincodeError.textContent = '';
                    isPincodeValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Toggle submit button based on validation
            function toggleSubmitButton() {
                submitBtn.disabled = !(isNameValid && isContactValid && isEmailValid && 
                                     isPincodeValid && isPriceValid && isDistanceValid && 
                                     isLocationValid && isImagesValid);
            }
            
            // Validate on form submission
            rentalForm.addEventListener('submit', function(e) {
                validateName();
                validateContact();
                validateEmail();
                validatePincode();
                validatePrice();
                validateDistance();
                validateLocation();
                validateImages();
                
                if (!(isNameValid && isContactValid && isEmailValid && 
                      isPincodeValid && isPriceValid && isDistanceValid && 
                      isLocationValid && isImagesValid)) {
                    e.preventDefault();
                }
            });
            
            // Initialize validation on page load
            validateName();
            validateContact();
            validatePincode();
            validatePrice();
            validateDistance();
            validateLocation();
        });
    </script>
