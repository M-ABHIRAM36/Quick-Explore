        .form-section-title {
            font-size: 1.2rem;
            color: var(--accent-color);
            margin-bottom: 1rem;
            font-weight: 600;
            display: flex;
            align-items: center;
        }
        
        .form-section-title i {
            margin-right: 10px;
        }
        
        .form-row {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .form-col {
            flex: 1;
            min-width: 250px;
        }
        
        .date-inputs {
            display: flex;
            gap: 1rem;
        }
        
        .date-inputs .form-group {
            flex: 1;
        }
        
