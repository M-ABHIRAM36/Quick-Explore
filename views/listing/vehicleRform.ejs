            const imagesError = document.createElement('small');
            imagesError.className = 'form-text text-danger';
            imagesInput.parentNode.appendChild(imagesError);
            
            // Validation flags
            let isNameValid = false;
            let isContactValid = false;
            let isEmailValid = true; // Email is optional
            let isBrandValid = false;
            let isModelValid = false;
            let isRegNumberValid = false;
            let isPincodeValid = false;
            let isPriceValid = false;
            let isLocationValid = false;
            let isAvailableFromValid = false;
            let isAvailableToValid = false;
            let isImagesValid = false;
            
            // Price validation - between 1000 and 250000
            priceInput.addEventListener('input', validatePrice);
            
            function validatePrice() {
                const price = priceInput.value.trim();
                const minPrice = 1000;
                const maxPrice = 250000;
                
                if (!price) {
                    priceError.textContent = 'Price is required';
                    isPriceValid = false;
                } else if (price < minPrice) {
                    priceError.textContent = `Price must be at least ₹${minPrice}`;
                    isPriceValid = false;
                } else if (price > maxPrice) {
                    priceError.textContent = `Price cannot exceed ₹${maxPrice}`;
                    isPriceValid = false;
                } else {
                    priceError.textContent = '';
                    isPriceValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Location validation - at least 2 words, each word minimum 3 letters
            locationInput.addEventListener('input', validateLocation);
            
            function validateLocation() {
                const location = locationInput.value.trim();
                const words = location.split(/\s+/).filter(word => word.length > 0);
                
                if (!location) {
                    locationError.textContent = 'Address is required';
                    isLocationValid = false;
                } else if (words.length < 2) {
                    locationError.textContent = 'Address must contain at least 2 words';
                    isLocationValid = false;
                } else if (words.some(word => word.length < 3)) {
                    locationError.textContent = 'Each word in address must be at least 3 letters long';
                    isLocationValid = false;
                } else {
                    locationError.textContent = '';
                    isLocationValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Pincode validation - Telangana pincodes (500xxx to 509xxx)
            pincodeInput.addEventListener('input', validatePincode);
            
            function validatePincode() {
                const pincode = pincodeInput.value.trim();
                const telanganaPincodeRegex = /^5[0-9]{5}$/;
                
                if (!pincode) {
                    pincodeError.textContent = 'Pincode is required';
                    isPincodeValid = false;
                } else if (!telanganaPincodeRegex.test(pincode)) {
                    pincodeError.textContent = 'Please enter a valid Telangana pincode (500xxx to 509xxx)';
                    isPincodeValid = false;
                } else {
                    pincodeError.textContent = '';
                    isPincodeValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Available dates validation
            availableFromInput.addEventListener('change', validateAvailableDates);
            availableToInput.addEventListener('change', validateAvailableDates);
            
            function validateAvailableDates() {
                const today = new Date();
                today.setHours(0, 0, 0, 0);
                
                const fromDate = new Date(availableFromInput.value);
                const toDate = new Date(availableToInput.value);
                
                const oneYearFromNow = new Date();
                oneYearFromNow.setFullYear(oneYearFromNow.getFullYear() + 1);
                
                // Validate Available From date
                if (!availableFromInput.value) {
                    availableFromError.textContent = 'Available from date is required';
                    isAvailableFromValid = false;
                } else if (fromDate < today) {
                    availableFromError.textContent = 'Available from date cannot be before today';
                    isAvailableFromValid = false;
                } else if (fromDate > oneYearFromNow) {
                    availableFromError.textContent = 'Available from date cannot be more than 1 year from now';
                    isAvailableFromValid = false;
                } else {
                    availableFromError.textContent = '';
                    isAvailableFromValid = true;
                }
                
                // Validate Available To date
                if (!availableToInput.value) {
                    availableToError.textContent = 'Available to date is required';
                    isAvailableToValid = false;
                } else if (toDate < fromDate) {
                    availableToError.textContent = 'Available to date cannot be before available from date';
                    isAvailableToValid = false;
                } else if (toDate > oneYearFromNow) {
                    availableToError.textContent = 'Available to date cannot be more than 1 year from now';
                    isAvailableToValid = false;
                } else {
                    availableToError.textContent = '';
                    isAvailableToValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Image validation - only jpg, jpeg, png allowed
            imagesInput.addEventListener('change', validateImages);
            
            function validateImages() {
                const file = imagesInput.files[0];
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                
                if (!file) {
                    imagesError.textContent = 'Image is required';
                    isImagesValid = false;
                } else if (!allowedTypes.includes(file.type)) {
                    imagesError.textContent = 'Only JPG, JPEG, and PNG images are allowed';
                    isImagesValid = false;
                } else {
                    imagesError.textContent = '';
                    isImagesValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Name validation - 5-15 characters, only letters
            ownerNameInput.addEventListener('input', validateName);
            
            function validateName() {
                const name = ownerNameInput.value.trim();
                const nameRegex = /^[a-zA-Z ]{3,15}$/;
                
                if (!name) {
                    ownerNameError.textContent = 'Name is required';
                    isNameValid = false;
                } else if (!nameRegex.test(name)) {
                    ownerNameError.textContent = 'Name must be 5-15 characters and contain only letters';
                    isNameValid = false;
                } else {
                    ownerNameError.textContent = '';
                    isNameValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Contact validation - Indian phone numbers
            contactInput.addEventListener('input', validateContact);
            
            function validateContact() {
                const contact = contactInput.value.trim();
                const indianPhoneRegex = /^[6-9]\d{9}$/;
                
                if (!contact) {
                    contactError.textContent = 'Contact number is required';
                    isContactValid = false;
                } else if (!indianPhoneRegex.test(contact)) {
                    contactError.textContent = 'Please enter a valid Indian phone number (10 digits starting with 6-9)';
                    isContactValid = false;
                } else {
                    contactError.textContent = '';
                    isContactValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Email validation - only allow gmail accounts, but optional
            emailInput.addEventListener('input', validateEmail);
            
            function validateEmail() {
                const email = emailInput.value.trim();
                
                if (email) {
                    const gmailRegex = /^[\w.+-]+@gmail\.com$/;
                    
                    if (!gmailRegex.test(email)) {
                        emailError.textContent = 'Only Gmail accounts are allowed';
                        isEmailValid = false;
                    } else {
                        emailError.textContent = '';
                        isEmailValid = true;
                    }
                } else {
                    // Email is optional
                    emailError.textContent = '';
                    isEmailValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Brand validation
            brandInput.addEventListener('input', validateBrand);
            
            function validateBrand() {
                const brand = brandInput.value.trim();
                
                if (!brand) {
                    brandError.textContent = 'Brand is required';
                    isBrandValid = false;
                } else if (brand.length < 2 || brand.length > 15) {
                    brandError.textContent = 'Brand must be between 2-15 characters';
                    isBrandValid = false;
                } else {
                    brandError.textContent = '';
                    isBrandValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Model validation
            modelInput.addEventListener('input', validateModel);
            
            function validateModel() {
                const model = modelInput.value.trim();
                
                if (!model) {
                    modelError.textContent = 'Model is required';
                    isModelValid = false;
                } else if (model.length < 1 || model.length > 15) {
                    modelError.textContent = 'Model must be between 1-15 characters';
                    isModelValid = false;
                } else {
                    modelError.textContent = '';
                    isModelValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Registration Number validation
            regNumberInput.addEventListener('input', validateRegNumber);
            
            function validateRegNumber() {
                const regNumber = regNumberInput.value.trim();
                const regNumberRegex = /^[A-Z]{2}[0-9]{2}[A-Z]{1,2}[0-9]{4}$/;
                
                if (!regNumber) {
                    regNumberError.textContent = 'Registration number is required';
                    isRegNumberValid = false;
                } else if (!regNumberRegex.test(regNumber)) {
                    regNumberError.textContent = 'Please enter a valid registration number format (e.g., TS02AB1234)';
                    isRegNumberValid = false;
                } else {
                    regNumberError.textContent = '';
                    isRegNumberValid = true;
                }
                
                toggleSubmitButton();
            }
            
            // Toggle submit button based on validation
            function toggleSubmitButton() {
                submitBtn.disabled = !(isNameValid && isContactValid && isEmailValid && 
                                     isBrandValid && isModelValid && isRegNumberValid && 
                                     isPincodeValid && isPriceValid && isLocationValid && 
                                     isAvailableFromValid && isAvailableToValid && isImagesValid);
            }
            
            // Validate on form submission
            vehicleForm.addEventListener('submit', function(e) {
                validateName();
                validateContact();
                validateEmail();
                validateBrand();
                validateModel();
                validateRegNumber();
                validatePincode();
                validatePrice();
                validateLocation();
                validateAvailableDates();
                validateImages();
                
                if (!(isNameValid && isContactValid && isEmailValid && 
                     isBrandValid && isModelValid && isRegNumberValid && 
                     isPincodeValid && isPriceValid && isLocationValid && 
                     isAvailableFromValid && isAvailableToValid && isImagesValid)) {
                    e.preventDefault();
                }
            });
            
            // Initialize validation on page load
            validateName();
            validateContact();
            validateEmail();
            validateBrand();
            validateModel();
            validateRegNumber();
            validatePincode();
            validatePrice();
            validateLocation();
            validateAvailableDates();
        });
    </script>
</body>
