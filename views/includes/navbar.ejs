<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quick Explore</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"/>

  <style>
    .navbar-custom {
      background: linear-gradient(90deg, #1f1f2e, #3a3a5c);
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    .navbar-brand {
      font-weight: 600;
      font-size: 1.4rem;
      display: flex;
      align-items: center;
    }

    .navbar-brand i {
      margin-right: 10px;
      font-size: 1.5rem;
    }

    .nav-link {
      color: #ddd !important;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .nav-link:hover,
    .nav-link.active {
      color: #ffffff !important;
      border-bottom: 2px solid #0d6efd;
    }

    .btn-outline-light:hover {
      background-color: #ffffff;
      color: #000;
    }

    .btn-success {
      background-color: #28a745;
      border: none;
    }

    .btn-danger {
      background-color: #dc3545;
      border: none;
    }

    .navbar-text {
      font-weight: 500;
    }

    .dropdown-menu {
      background-color: #2e2e4d;
      opacity: 0;
      visibility: hidden;
      transform: translateY(10px);
      transition: opacity 0.3s ease, transform 0.3s ease;
      display: block;
      pointer-events: none;
    }

    .dropdown-item {
      color: #ddd;
      font-weight: 500;
      padding: 0.7rem 1rem;
      border-radius: 6px;
      display: flex;
      align-items: center;
      transition: all 0.2s ease;
    }

    .dropdown-item:hover {
      background-color: rgba(108, 99, 255, 0.15);
      color: #fff;
      /* transform: translateX(3px); */
    }
    .dropdown-item:hover i {
      transform: scale(1.1);
    }

    .nav-item.dropdown:hover .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
      pointer-events: auto;
    }

    .dropdown-toggle::after {
      display: none;
    }
    .nav-item.dropdown:hover .fa-chevron-down {
        transform: rotate(180deg);
        transition: transform 0.35s ease;
    }

  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark navbar-custom sticky-top" style="height: 75px;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/flash">
        <i class="fas fa-map-marked-alt"></i> Quick Explore
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto ms-4">

          <li class="nav-item mx-2 ms-4">
            <a class="nav-link" href="/places2">All Listings</a>
          </li>

            <!-- Dropdown for Requests -->
            <li class="nav-item dropdown mx-2">
                <!-- <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Requests</a> -->
                <a class="nav-link dropdown-toggle d-flex align-items-center gap-1" href="#" role="button" data-bs-toggle="dropdown">
                    Requests <i class="fas fa-chevron-down small"></i>
                </a>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/vehicleRform"><i class="fas fa-car-side me-2"></i>Vehicle Request</a></li>
                <li><a class="dropdown-item" href="/rentalRform"><i class="fas fa-home me-2"></i>Rental Request</a></li>
                </ul>
            </li>
  
            <!-- Dropdown for Status -->
            <li class="nav-item dropdown mx-2">
                <a class="nav-link dropdown-toggle d-flex align-items-center gap-1" href="#" role="button" data-bs-toggle="dropdown">
                    Status <i class="fas fa-chevron-down small"></i>
                </a>      
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/Vstatus"><i class="fas fa-tachometer-alt me-2"></i>Vehicle Status</a></li>
                <li><a class="dropdown-item" href="/Rstatus"><i class="fas fa-clipboard-check me-3"></i>Rental Status</a></li>
                </ul>
            </li>
  
            <!-- Dropdown for Bookings -->
            <li class="nav-item dropdown mx-2">
                <a class="nav-link dropdown-toggle d-flex align-items-center gap-1" href="#" role="button" data-bs-toggle="dropdown">
                    My Bookings <i class="fas fa-chevron-down small"></i>
                </a>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/my-bookings"><i class="fas fa-calendar-check me-2"></i>Vehicle Bookings</a></li>
                <li><a class="dropdown-item" href="/my-Rbookings"><i class="fas fa-file-alt me-3"></i>Rental Bookings</a></li>
                </ul>
            </li>
  
            <!-- Dropdown for Charges -->
            <li class="nav-item dropdown mx-2">
              <a class="nav-link dropdown-toggle d-flex align-items-center gap-1" href="#" role="button" data-bs-toggle="dropdown">
                My Charges <i class="fas fa-chevron-down small"></i>
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/my-charges"><i class="fas fa-money-bill-wave me-2"></i>My Vehicle Charges</a></li>
                <li><a class="dropdown-item" href="/my-Rentalcharges"><i class="fas fa-receipt me-3"></i>My Rental Charges</a></li>
                </ul>
            </li>
  

          <!-- Driver Login -->
          <li class="nav-item mx-2">
            <a class="nav-link" href="/driver/login">Driver Login</a>
          </li>
          <!-- Owner Login -->
          <li class="nav-item mx-2">
            <a class="nav-link" href="/owner/login">Owner Login</a>
          </li>

        </ul>

        <!-- Login / Logout -->
        <ul class="navbar-nav ms-auto align-items-center">
          <% if (!currentUser) { %>
            <li class="nav-item mx-2">
              <a class="btn btn-outline-light" href="/login">Login</a>
            </li>
            <li class="nav-item mx-2">
              <a class="btn btn-success" href="/register">Sign Up</a>
            </li>
          <% } else { %>
            <li class="nav-item mx-2">
              
              <span class="navbar-text text-light">Hi, <%= currentUser.username %></span>
              <a href="/user/profile" class="btn btn-primary" style="background: linear-gradient(90deg, #4a4a6d, #44446e);
      box-shadow: 0 4px 8px rgba(0,0,0,0.25);"><i class="fas fa-user-circle fa-lg text-light"></i> Profile</a>
            </li>
            <li class="nav-item mx-2">
              <a class="btn btn-danger" href="/logout" style="background: linear-gradient(90deg, #df0000, #ff4e50);
              box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
              "><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Active link highlighter -->
  <script>
    const currentUrl = window.location.href;
    document.querySelectorAll('.nav-link').forEach(link => {
      if (link.href === currentUrl) {
        link.classList.add('active');
      }
    });
  </script>
</body>
</html>
